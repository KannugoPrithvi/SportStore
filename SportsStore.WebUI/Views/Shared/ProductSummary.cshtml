@model SportsStore.WebUI.Models.ProductImageViewModel



<div class="col-sm-3 col-md-3 thumbnail" style="margin: 5px">
    <div>
        <img src="@Model.ImagePath" width="100%" height="200px" alt="..." />
        <div class="caption">
            <div style="font-size:medium;font-weight:bold" class="clampString">@Model.Name</div>
            <div class="clampString">@Model.ShortDescription</div>
            <span style="text-align: center">
                <span style="font-size:medium;font-weight:bold">@Model.AltPrice.ToString("c")</span>
            </span>
        </div>

        <a href="#" class="btn btn-default btn-primary pull-left">Quick View</a>
        @using (Html.BeginForm("AddToCart", "Cart"))
        {
            <div class="pull-right">
                @Html.HiddenFor(x => x.ProductID)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)

                <input type="submit" class="btn btn-default btn-success" value="Add to cart" />
            </div>
        }

    </div>
</div>
