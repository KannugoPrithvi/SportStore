<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="∼/Content/ErrorStyles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        /*.navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }*/        
        #CenteredContent {
            max-width: 1000px;
            margin: auto;
            background: none repeat scroll 0% 0% rgb(255, 255, 255);            
        }

        body {
            padding-top: 70px;            
        }

        .entry-title {
            background: none repeat scroll 0% 0% rgb(0, 181, 226);
            margin-bottom: 30px;
            width: 100%;
            float: left;
            color: rgb(0, 181, 226);
        }

            .entry-title span {
                color: rgb(0, 181, 226);
                padding-left: 20px;
                padding-right: 20px;
                margin-left: 20px;
                font-family: 'PT Sans',sans-serif;
                text-transform: uppercase;
                font-weight: 400;
                background: none repeat scroll 0% 0% rgb(255, 255, 255);
            }

            .entry-title h5 {
                line-height: 13px;
                margin-bottom: 0px;
                margin-top: 0px;
            }

        .navbar-text {
            color: white;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <a class="navbar-brand" href="#">
            SHOPPING STORE
        </a>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Login</a></li>
        </ul>
        @Html.Action("Summary", "Cart")



    </div>
    <div style="max-width: 1000px" class="navbar center-block" role="navigation">
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav nav-pills center-block">
                @Html.Action("Menu", "Nav")



                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Miscallaneous <b class="caret"></b></a>
                    <ul role="menu" class="dropdown-menu">
                        <li><a href="#">Order Status</a></li>
                        <li><a href="#">My Account</a></li>
                        <li><a href="#">Offers Zone</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Trash</a></li>
                    </ul>
                </li>
            </ul>
            <form role="search" class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" placeholder="Search" class="form-control">
                </div>
            </form>
        </div>
    </div>
    <div class="container" id="CenteredContent">
        <div class="col-sm-12 col-xs-12">
            @RenderBody()

        </div>
    </div>
</body>
</html>
