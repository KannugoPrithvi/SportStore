@model SportsStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "SportStore: Checkout";
}
<script>
    $(document).ready(function () {
        $('#AccountCreateCheckBox').click(function () {
            if ($(this).prop("checked") == true) {
                $("#AccountCreation").fadeIn(300);
            }
            else if ($(this).prop("checked") == false) {
                $("#AccountCreation").fadeOut("slow");
            }
        });
        $('#ShippingDetailsCheckBox').click(function () {
            if ($(this).prop("checked") == true) {
                $("#ShippingDetails").fadeIn(300);
            }
            else if ($(this).prop("checked") == false) {
                $("#ShippingDetails").fadeOut("slow");
            }
        });
    });
</script>
