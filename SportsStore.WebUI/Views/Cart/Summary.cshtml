@model SportsStore.Domain.Entities.Cart
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover(
            {
                placement: 'bottom',
                html: 'true',
                trigger: 'click',
                container:'body'
            });
    });
</script>
@helper cart_button_content()
{

    <p>@Model.Lines.Sum(x => x.Quantity) Items in Cart</p>
    <p>@Html.ActionLink("VIEW CART", "Index", new { controller = "Cart", returnUrl = @Request.Url.PathAndQuery }, new { @class = "btn btn-blue btn-sharp" })</p>
    <p>@Html.ActionLink("CHECKOUT", "Checkout", new { controller = "Cart", returnUrl = @Request.Url.PathAndQuery }, new { @class = "btn btn-blue btn-sharp" })</p>
}
<div class="navbar-right hidden-xs" style="margin-left:10px">
    <button class="btn btn-sharp btn-red navbar-btn" data-content='@cart_button_content()'
            data-toggle="popover" data-placement="bottom" title="SUMMARY">
        <span>
            <i class="fa fa-shopping-cart">
            </i>
        </span><span> @Model.ComputeTotalValue().ToString("c")</span>
    </button>


</div>
<div class="navbar-right visible-xs">
    <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })
       class="btn btn-default btn-sharp navbar-btn">
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>



