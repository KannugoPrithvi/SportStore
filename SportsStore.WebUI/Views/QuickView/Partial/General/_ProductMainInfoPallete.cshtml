@model SportsStore.Domain.Entities.Product

@using System.Linq;
@{
    SportsStore.Domain.Entities.Attribute attributeWarranty = null;
    IEnumerable<SportsStore.Domain.Entities.Attribute> lstKeyFeatures = null;
    if (Model.Attributes != null)
    {
        attributeWarranty = Model.Attributes.FirstOrDefault(p => p.AttributeType.Equals("Warranty"));
        lstKeyFeatures = Model.Attributes.Where(p => p.AttributeType.Equals("KeyFeatures"));
    }
}
<div class="panel-body product-pallete">
    <div class="col-md-5 container">
        @*<div style="width:auto;height:200px"><img src="@Model.Images.FirstOrDefault().MediumImage" style="width:70%;height:100%" /></div>*@
        <div class="row">
            <div class="col-md-12">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="item active" data-thumb="0">
                            <img src="http://placehold.it/350x250/e8117f/fff&amp;text=Product+Main">
                        </div>
                        <div class="item" data-thumb="0">
                            <img src="http://placehold.it/350x250/00ffff/000&amp;text=Product+Image+2">
                        </div>
                        <div class="item" data-thumb="0">
                            <img src="http://placehold.it/350x250/ff00ff/fff&amp;text=Product+Image+3">
                        </div>
                        <div class="item" data-thumb="0">
                            <img src="http://placehold.it/350x250/ffff00/000&amp;text=Product+Image+4">
                        </div>
                        <div class="item" data-thumb="1">
                            <img src="http://placehold.it/350x250/7B1C8E/fff&amp;text=Product+Image+5">
                        </div>
                        <div class="item" data-thumb="1">
                            <img src="http://placehold.it/350x250/9EF383/000&amp;text=Product+Image+6">
                        </div>
                        <div class="item" data-thumb="1">
                            <img src="http://placehold.it/350x250/D64908/fff&amp;text=Product+Image+7">
                        </div>
                        <div class="item" data-thumb="1">
                            <img src="http://placehold.it/350x250/E3A3A1/000&amp;text=Product+Image+8">
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                    <div id="thumbcarousel" class="carousel slide" data-interval="false">
                        <div class="carousel-inner">
                            <div class="item active">
                                <div data-target="#carousel" data-slide-to="0" class="thumb"><img src="http://placehold.it/100/e8117f/fff&amp;text=Product+Main"></div>
                                <div data-target="#carousel" data-slide-to="1" class="thumb"><img src="http://placehold.it/100/00ffff/000&amp;text=Product+Image+2"></div>
                                <div data-target="#carousel" data-slide-to="2" class="thumb"><img src="http://placehold.it/100/ff00ff/fff&amp;text=Product+Image+3"></div>
                                <div data-target="#carousel" data-slide-to="3" class="thumb"><img src="http://placehold.it/100/ffff00/000&amp;text=Product+Image+4"></div>
                            </div><!-- /item -->
                            <div class="item">
                                <div data-target="#carousel" data-slide-to="4" class="thumb"><img src="http://placehold.it/100/7B1C8E/fff&amp;text=Product+Image+5"></div>
                                <div data-target="#carousel" data-slide-to="5" class="thumb"><img src="http://placehold.it/100/9EF383/000&amp;text=Product+Image+6"></div>
                                <div data-target="#carousel" data-slide-to="6" class="thumb"><img src="http://placehold.it/100/D64908/fff&amp;text=Product+Image+7"></div>
                                <div data-target="#carousel" data-slide-to="7" class="thumb"><img src="http://placehold.it/100/E3A3A1/000&amp;text=Product+Image+8"></div>
                            </div><!-- /item -->
                        </div><!-- /carousel-inner -->
                        <a class="left carousel-control" href="#thumbcarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#thumbcarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div> <!-- /thumbcarousel -->
                </div><!-- /clearfix -->
            </div> <!-- /col-sm-6 -->
        </div> <!-- /row -->
    </div>
    <div class="col-md-7" style="height:inherit;padding-left:10px;border-left:1px solid green;">
        <p style="font-size:1.25em;">@Model.Name</p>
        <p style="font-size:1em;">@Model.ShortDescription</p>
        <div class="col-md-12 product-pallete-reviewStrip">
            <div class="col-md-5"><div id="stars-existing" class="starrr col-md-6" data-rating='4'></div><div class="col-md-6" style="padding-left:0">156 Ratings</div></div>
            <div class="col-md-3"><i class="fa fa-comments"></i> 86 Reviews</div>
            <div class="col-md-4"><i class="fa fa-pencil fa-rotate-270"></i> Write a Review</div>
        </div>

        <div class="col-md-12 row">
            <div class="col-md-6">
                @if (lstKeyFeatures.Count() < 6)
                {
                <p>
                    <ul class="fa-ul">
                        @foreach (var item in lstKeyFeatures)
                            {
                            <li style="font-size:0.9em"><i class="fa-li fa fa-chevron-right"></i>@item.AttributeValue</li>
                            }
                    </ul>
                </p>
                }
            </div>

            @if (attributeWarranty != null)
            {
            <div class="col-md-6" style="padding-top:10px">
                <span style="font-size:1.2em">Warranty</span>
                <p>@attributeWarranty.AttributeValue</p>
            </div>
            }
        </div>
        <div class="col-md-12">
            <div class="col-md-5" style="padding:0">
                @Html.Label("Check Availability at your place: ")
            </div>
            <div class="col-md-4" style="padding-left:0">
                @Html.TextBox("Pincode", null, new { placeholder = "Enter your Pincode", @class = "form-control input-sm btn-sharp" })
            </div>
            <div class="col-md-3" style="padding-left:10px">
                <button type="submit" class="btn btn-sharp" style="background-color:#303030;color:white;line-height:1;padding:7px 10px"><i class="fa fa-check"></i> Check</button>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6" style="padding-left:0px">
                <p>MRP: <span style="text-decoration:line-through"><i class="fa fa-inr"></i> @Model.UnitPrice</span></p>
                <p>Discount: <span class="badge" style="color:white;background-color:#1b5e20">@((int)Model.UnitPrice / (int)Model.AltPrice)%</span></p>
                <p>Offer Price: <i class="fa fa-inr"></i> @Model.AltPrice</p>
                <div class="col-md-12" style="padding-left:0"><button class="btn btn-sharp btn-success">ADD TO CART</button></div>
            </div>
            <div class="col-md-6" style="padding:0">
                <div class="col-md-12">DELIVERED BY: Usually Delivered in 2-3 business days.</div>
            </div>
        </div>

    </div>

</div>
