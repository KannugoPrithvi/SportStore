@helper ThumbnailSection(string imagePath,string name,string shortDescription,int productID,decimal altPrice)
{
    <div class="col-sm-3 col-md-3 thumbnail btn-sharp" style="margin: 5px">
        <div>
            <img src="@imagePath" width="100%" height="200px" alt="..." />
            <div class="caption">
                <div style="font-size:medium;font-weight:bold" class="clampString">@name</div>
                <div class="clampString">@shortDescription</div>
                <span style="text-align: center">
                    <span style="font-size:medium;font-weight:bold">@altPrice.ToString("c")</span>
                </span>
            </div>
            <a href='@Url.Action("ProductView", new { controller = "QuickView", ProductID = @productID })' class="btn btn-quickview pull-left btn-sharp">Quick View</a>
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-right">
                    @Html.Hidden("ProductID", productID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-sharp btn-addtocart" value="Add to cart" />
                </div>
            }
        </div>
    </div>
}
@helper ProductSlider(SportsStore.WebUI.Models.ProductSliderPartialViewModel productSliderViewModel,int carouselNumber = 0, string CarouselID = null)
