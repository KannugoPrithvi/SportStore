@model IEnumerable<SportsStore.Domain.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Categories</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-right">Keywords</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.CategoryID</td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new
                           {
                               item.CategoryID
                           })
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td class="text-right">@item.Keywords</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "CategoryAdmin"))
                        {
                            @Html.Hidden("CategoryID", item.CategoryID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new Category", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>


