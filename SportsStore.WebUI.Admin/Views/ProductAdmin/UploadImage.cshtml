@model SportsStore.WebUI.Admin.Models.ImageUploadViewModel

@{
    ViewBag.Title = "Upload Image Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ImageUploadViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ProductID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Product", Model.Product.Name, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImageDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ImageDescription, "", new { @class = "text-danger" })
            </div>
        </div>


        @* Div Control for small image *@
        <div class="form-group">
            @Html.LabelFor(x => x.SmallImage, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.SmallImage, new { type = "file", @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(x => x.SmallImage)
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn-sm btn-primary">Upload</button>
            </div>
        </div>



        @* Div Control for small image *@
        <div class="form-group">
            @Html.LabelFor(x => x.MediumImage, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.MediumImage, new { type = "file", @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(x => x.MediumImage)
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn-sm btn-primary">Upload</button>
            </div>
        </div>


        @* Div Control for small image *@
        <div class="form-group">
            @Html.LabelFor(x => x.LargeImage, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.LargeImage, new { type = "file", @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(x => x.LargeImage)
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn-sm btn-primary">Upload</button>
            </div>
        </div>


        @* Div Control for small image *@
        <div class="form-group">
            @Html.LabelFor(x => x.ExtraImage, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ExtraImage, new { type = "file", @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(x => x.ExtraImage)
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn-sm btn-primary">Upload</button>
            </div>
        </div>


        @* Div Control for small image *@
        <div class="form-group">
            @Html.LabelFor(x => x.ExtraImage1, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ExtraImage1, new { type = "file", @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(x => x.ExtraImage1)
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn-sm btn-primary">Upload</button>
            </div>
        </div>


        @* Div Control for Extra 2 image *@
        <div class="form-group">
            @Html.LabelFor(x => x.ExtraImage2, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ExtraImage2, new { type = "file", @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(x => x.ExtraImage2)
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn-sm btn-primary">Upload</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
