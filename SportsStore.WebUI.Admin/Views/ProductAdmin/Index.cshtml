@model IEnumerable<SportsStore.Domain.Entities.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Products</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th>Short Description</th>
                <th class="text-right">Alternative Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right col-md-1">@item.ProductID</td>
                    <td class="col-md-2">
                        @Html.ActionLink((string)item.Name, "Edit", new
                           {
                               item.ProductID
                           })
                    </td>
                    <td class="col-md-5">
                        @item.ShortDescription
                    </td>
                    <td class="text-right col-md-1">@item.AltPrice.ToString("c")</td>
                    <td class="col-md-3">                        
                        @Html.ActionLink("Delete", "Delete", new { controller = "ProductAdmin", ProductID = item.ProductID }, new { style="color:red"})
                        @Html.ActionLink("Edit_Product_Spec", "Edit", new { controller = "ProductSpecification", ProductID = item.ProductID })
                        @Html.ActionLink("Edit_Image", "UploadImage", new { controller = "ProductAdmin", ProductID = item.ProductID }, new { style="color:green"})
                        @Html.ActionLink("Product_Category", "Edit", new { controller = "ProductCategoryAdmin", ProductID = item.ProductID }, new { style="color:orange"})
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new product", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
